<Page x:Class="MenuPrincipal.PageLibro.PageLibro"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MenuPrincipal.PageLibro"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLibro">

    <Grid>
        <StackPanel x:Name="txbTitulo" HorizontalAlignment="Right" Width="544" Height="120" VerticalAlignment="Top">
            <TextBox Text="{Binding LIBROS.Titulo}" FontSize="24" FontWeight="Bold" />
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" Width="544" Height="325" VerticalAlignment="Top" Margin="0,125,0,0">
            <TextBox x:Name="txbSinopsis" Text="{Binding LIBROS.Sinopsis}" TextWrapping="Wrap" />
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" Width="251" Height="445" VerticalAlignment="Top" Margin="0,0,549,0">
            
        </StackPanel>
    </Grid>
</Page>
