<Page x:Class="MenuPrincipal.PageUsuarios.Usuarios"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MenuPrincipal.PageUsuarios"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Usuarios" Background="White"  Loaded="Window_Loaded">

    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBlock Text="Registro de Usuarios" FontSize="18" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Height="30" Margin="10,0,0,0">
                <TextBlock Text="Carnet:" Margin="50,5,50,10" Width="100"/>
                <TextBlock Text="Nombre:" Margin="0,5,50,10" Width="100"/>
                <TextBlock Text="Carrera:" Margin="0,5,50,10" Width="100"/>
                <TextBlock Text="Correo:" Margin="0,5,50,10" Width="100"/>
            </StackPanel>
            <!-- Filtros de búsqueda -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5" Height="60">

                <TextBox x:Name="txtCarnet" Margin="0,10,10,0" Width="150" Height="30"/>
                <TextBox x:Name="txtNombre" Width="150" Margin="0,10,10,0" Height="30"/>
                <TextBox x:Name="txtCarrera" Width="150"  Margin="0,10,10,0" Height="30"/>
                <TextBox x:Name="txtCorreo" Width="150"  Margin="0,10,10,0" Height="30"/>
                <Button x:Name="btnFiltrar" Content="Buscar" Width= "100" Margin="0,10,10,0" Height="30" Click="btnFiltrar_Click"/>
            </StackPanel>

            <!-- DataGrid para mostrar usuarios -->
            <TextBlock Text="Lista de Usuarios Registrados" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <DataGrid Name="dataGridUsuarios" AutoGenerateColumns="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Page>
